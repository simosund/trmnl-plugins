{% template battery_info %}
<div class="flex flex--col flex--center-x">
  <div class="flex flex--row flex--center-y">
    <span class="title"> Battery: &nbsp; </span>
    {% render "battery_icon", percentage: data.percent_charged, size: 32 %}
  </div>
  <div class="flex flex--row">
    <span class="value value--{{ size }}"> {{ data.percent_charged }}% </span>
    <span class="value value--{{ size }}"> ({{ data.battery_voltage }}V) </span>
  </div>
</div>
{% endtemplate %}

{% template wifi_info %}
<div class="flex flex--col flex--center-x">
  <div class="flex flex--row flex--center-y">
    <!-- SVG from https://icons.getbootstrap.com/icons/wifi/ -->
    <span class="title"> WiFi: &nbsp; </span>
    {% render "wifi_icon", percentage: data.wifi_strength, size: 32 %}
  </div>
  <div class="flex flex--row">
    <span class="value value--{{ size }}"> {{ data.wifi_strength }}% </span>
    <span class="value value--{{ size }}"> ({{ data.rssi }}dBm) </span>
  </div>
</div>
{% endtemplate %}

{% template titlebar %}
<div class="title_bar">
  <img class="image" src="/images/plugins/trmnl--render.svg">
  <span class="title text--black"> {{ data.name }} </span>
  <span class="instance">{{ trmnl.system.timestamp_utc | plus: trmnl.user.utc_offset | date: "%Y-%m-%d %H:%M" }}</span>
</div>
{% endtemplate %}