{% template battery_icon %}
<!-- SVG source from https://icons.getbootstrap.com/icons/battery-full/ -->
<svg xmlns="http://www.w3.org/2000/svg" width="{{ size }}" height="{{ size }}" fill="currentColor" class="bi bi-battery-half" viewBox="0 0 16 16">
  <!-- The full battery bar apparently has a width of 10 -->
  <!-- So easy to create icon that's modified to the closest 10% charge -->
  <path d="M2 6h{{ percentage | divided_by: 10.0 | round }}v4H2z"/>
  <path d="M2 4a2 2 0 0 0-2 2v4a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2zm10 1a1 1 0 0 1 1 1v4a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V6a1 1 0 0 1 1-1zm4 3a1.5 1.5 0 0 1-1.5 1.5v-3A1.5 1.5 0 0 1 16 8"/>
</svg>
{% endtemplate %}

